	<Page showHeader="true" title="Debug Me" showFooter="true" enableScrolling="true">
		<content>
			<l:VerticalLayout class="sapUiResponsiveMargin">
				<Input placeholder="Enter first number" id="input1"/>
				<Input placeholder="Enter second number" id="input2"/>
